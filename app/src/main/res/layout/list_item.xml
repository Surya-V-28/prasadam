<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FF801D">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/templeImage"
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shreeabhisthamaharajaganapathitemple"
                    app:civ_border="false"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/black"
                    app:civ_shadow_gravity="start"
                    app:civ_shadow_radius="10dp" />

                <!-- Text View to display Course Name -->
                <TextView
                    android:id="@+id/templeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/templeImage"
                    android:text="Shree Abhistha Maharaja Ganapathi Temple"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/templeName"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/templeImage"
                    android:drawablePadding="2dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/templeLocation"
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:text="HSR Layout, Bengaluru, Karnataka"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/placeholder"/>

                        <TextView
                            android:id="@+id/templeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="29km"
                            android:layout_marginEnd="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/templeTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/templeImage"
                    android:drawablePadding="2dp"
                    android:textColor="@color/black"
                    android:text="5am-5pm"
                    android:layout_marginBottom="10dp"/>

        </RelativeLayout>



</androidx.cardview.widget.CardView>
